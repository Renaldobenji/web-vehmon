<li style="background-color: lightcyan" class="left clearfix">
    <span class="chat-img pull-left">
        <img style="margin-top: -15px" src="@Url.Content("~/Content/img/Chat Alt2.png")" alt="User Avatar" class="img-circle">
    </span>
    <div class="chat-body clearfix">
        <div class="header">
            <strong class="primary-font">@ViewBag.Sender</strong>
            <small class="pull-right text-muted">
                <i class="fa fa-clock-o fa-fw"></i>@ViewBag.TimeSent
            </small>
        </div>
        <p>
            @ViewBag.Message
        </p>
    </div>
</li>
