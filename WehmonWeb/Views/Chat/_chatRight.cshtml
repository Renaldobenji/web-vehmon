<li style="background-color: ivory" class="right clearfix">
    <span class="chat-img pull-right">
        <img style="margin-top: -15px" src="@Url.Content("~/Content/img/Chat Alt.png")" alt="User Avatar" class="img-circle">
    </span>
    <div class="chat-body clearfix">
        <div class="header">
            <small class=" text-muted">
                <i class="fa fa-clock-o fa-fw"></i>@ViewBag.TimeSent</small>
            <strong class="pull-right primary-font">@ViewBag.Sender</strong>
        </div>
        <p>
            @ViewBag.Message
        </p>
    </div>
</li>
