</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="#" title="Buy Sell Rent Everyting">
                    <img style="max-width:60px; margin-top: -14px;"
                     src="@Url.Content("~/Content/img/SCORPIONu logo.png")"/>

                </a>
                <a class="navbar-brand" href="index.html">Vehmon</a>
            </div>
            <!-- Top Menu Items -->
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav ">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@User.Identity.Name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i>Profile</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-fw fa-desktop"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i>Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("LogOff", "Account")"><i class="fa fa-fw fa-power-off"></i>Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @{
                var curAction = ViewContext.RouteData.GetRequiredString("action");
                var homeSel = curAction == "Index" ? "active" : "";
                var companySel = curAction == "Company" ? "active" : "";
                var userSel = curAction == "UserManagement" ? "active" : "";
                var mapsSel = curAction == "MapsDashboard" ? "active" : "";
                var leaveSel = curAction == "DisplayLeave" ? "active" : "";
                var shiftSel = curAction == "DisplayShifts" ? "active" : "";
            }
            <div class="collapse navbar-collapse navbar-ex1-collapse ">
                <ul class="nav navbar-nav side-nav  ">
                    <li class="@homeSel">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-fw fa-home"></i>Home</a>
                    </li>
                    <li class="@companySel">
                        <a href="@Url.Action("Company", "Dashboard")"><i class="fa fa-fw fa-building"></i>Companies</a>
                    </li>
                    <li class="@userSel">
                        <a href="@Url.Action("UserManagement", "Dashboard")"><i class="fa fa-fw fa-users"></i>User Management</a>
                    </li>
                    <li class="@leaveSel">
                        <a href="@Url.Action("DisplayLeave", "Dashboard")"><i class="fa fa-fw fa-map-marker"></i>Leave Requests</a>
                    </li>
                    <li class="@shiftSel">
                        <a href="@Url.Action("DisplayShifts", "Dashboard")"><i class="fa fa-fw fa-map-marker"></i>Display Shifts</a>
                    </li>
                    <li class="@mapsSel">
                        <a href="@Url.Action("MapsDashboard", "Dashboard")"><i class="fa fa-fw fa-map-marker"></i>Map Dashboard</a>
                    </li>
                    <li class="@mapsSel">
                        <a href="@Url.Action("PayRun", "Reports")"><i class="fa fa-fw fa-map-marker"></i>Pay Run</a>
                    </li>

                </ul>
               
            </div>
             
        </nav>

        <div style="height: 100%" id="page-wrapper" class="pull-right">

            <div class="container-fluid " style="height: 100%">
                @RenderBody()


            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>

</body>

</html>
